.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}

/* 头部区域 */
.header {
  display: flex;
  justify-content: space-between;
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 20rpx;
  background: white;
}

.header .headtatol {
  width: 100rpx;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50%;
  background: skyblue;
}

.header .user {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-right: 50rpx;
}

/* 学生区域 */
.student {
  margin: 0 20rpx;
  background: white;
  border-radius: 20rpx;
}

.student .test {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 70rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

/* 老师区域 */
.teacher {
  margin: 20rpx;
  background: white;
  border-radius: 20rpx;
}

.teacher .tilte {
  margin: 20rpx;
  padding-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 38rpx;
}

.recommendScroll {
  height: 600rpx;
  display: flex;
}

.recommendScroll .demo {
  width: 500rpx;
  margin: 0 20rpx 0 20rpx;
  border-right: 1rpx solid #f5f5f5;
}

.recommendScroll .demo .student {
  margin-bottom: 20rpx;
  width: 500rpx;
}

.recommendScroll .demo .test {
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
}

.recommendScroll .demo .test .content{
  margin-right: 50rpx;
  margin-bottom: 25rpx;
}

.recommendScroll .demo .end{
  padding-bottom: 20rpx;
}

.remark{
  margin-top: 10rpx;
  margin-right: 20rpx;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.noHave{
  height: 200rpx;
  padding: 20rpx;
  font-size: 38rpx;
}

